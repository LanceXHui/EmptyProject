# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'EmptyProject' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for EmptyProject

pod 'Spring'                  # 提供一些简单但常用的动画效果
pod 'Hero'                    # 优雅的控制器之间的过渡效果
pod 'NVActivityIndicatorView' # 优美的loading动画
pod 'MBProgressHUD'           # 提示框

pod 'Kingfisher'              # 图片异步处理框架
pod 'SwiftyJSON'              # Json处理
pod 'Alamofire'               # 网络请求库
pod 'ObjectMapper'            # model和json映射库

pod 'SwiftyUserDefaults'      # userDefault持久化存储
pod 'SwiftyStoreKit'          # 内购
pod 'KeychainAccess'          # 钥匙链

pod 'SnapKit'                 # 布局

pod 'Fabric'                  # Fabric 统计
pod 'Crashlytics'             # Fabric 崩溃统计包含事件统计
pod 'FacebookCore'            # FaceBook 统计
pod 'Firebase/Core'           # Firebase 统计

end
